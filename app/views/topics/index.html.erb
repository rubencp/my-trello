<p id="notice"><%= notice %></p>

<h1>Topics</h1>
From my Scaffold template (ovveriden)

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>

      <th>Name</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>

        <td><%= topic.name %></td>

        <td><%= link_to 'Show', topic , class: "btn btn-info btn-xs" %></td>
        <td><%= link_to 'Edit', edit_topic_path(topic) , class: "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger btn-xs"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic', new_topic_path ,class: "btn btn-primary btn-sm" %>
