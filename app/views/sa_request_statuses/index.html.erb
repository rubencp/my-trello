<p id="notice"><%= notice %></p>

<h1>Sa Request Statuses</h1>
From my Scaffold template (ovveriden)

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>

      <th>Name</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sa_request_statuses.each do |sa_request_status| %>
      <tr>

        <td><%= sa_request_status.name %></td>

        <td><%= link_to 'Show', sa_request_status , class: "btn btn-info btn-xs" %></td>
        <td><%= link_to 'Edit', edit_sa_request_status_path(sa_request_status) , class: "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Destroy', sa_request_status, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger btn-xs"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sa request status', new_sa_request_status_path ,class: "btn btn-primary btn-sm" %>
