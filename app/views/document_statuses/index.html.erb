<p id="notice"><%= notice %></p>

<h1>Document Statuses</h1>
From my Scaffold template (ovveriden)

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>

      <th>Name</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @document_statuses.each do |document_status| %>
      <tr>

        <td><%= document_status.name %></td>

        <td><%= link_to 'Show', document_status , class: "btn btn-info btn-xs" %></td>
        <td><%= link_to 'Edit', edit_document_status_path(document_status) , class: "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Destroy', document_status, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger btn-xs"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document status', new_document_status_path ,class: "btn btn-primary btn-sm" %>
