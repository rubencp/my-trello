<p id="notice"><%= notice %></p>

<h1>Person Types</h1>
From my Scaffold template (ovveriden)

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>

      <th>Name</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person_types.each do |person_type| %>
      <tr>

        <td><%= person_type.name %></td>

        <td><%= link_to 'Show', person_type , class: "btn btn-info btn-xs" %></td>
        <td><%= link_to 'Edit', edit_person_type_path(person_type) , class: "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Destroy', person_type, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger btn-xs"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person type', new_person_type_path ,class: "btn btn-primary btn-sm" %>
