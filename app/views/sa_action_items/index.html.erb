<p id="notice"><%= notice %></p>

<h1>System Architect Action Items</h1>


<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>

      <th>Title</th>

    <!--  <th>Description</th> -->

      <th>Type</th>

      <th>Status</th>

      <!--<th>Remark</th>-->

      <!--<th>Link ulr</th>-->

      <th>Responsible</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sa_action_items.each do |sa_action_item| %>
      <tr>

        <td><%= link_to sa_action_item.title, sa_action_item %></td>

        <!--<td><%= sa_action_item.description %></td>-->

        <td><%= sa_action_item.type %></td>

        <td><%= sa_action_item.status %></td>

        <!-- <td><%= sa_action_item.remark %></td> -->

        <!--<td><%= sa_action_item.link_ulr %></td>-->

        <td><%= sa_action_item.person.name %></td>

     <!--    <td><%= link_to 'Show', sa_action_item , class: "btn btn-info btn-xs" %></td>-->
        <td><%= link_to 'Edit', edit_sa_action_item_path(sa_action_item) , class: "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Destroy', sa_action_item, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger btn-xs"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

