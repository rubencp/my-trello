<p id="notice"><%= notice %></p>

<h1>People</h1>
From my Scaffold template (ovveriden)

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>

      <th>Name</th>

      <th>Email</th>

      <th>Ssid</th>

      <th>Possition</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>

        <td><%= person.name %></td>

        <td><%= person.email %></td>

        <td><%= person.ssid %></td>

        <td><%= person.person_type.name %></td>

        <td><%= link_to 'Show', person , class: "btn btn-info btn-xs" %></td>
        <td><%= link_to 'Edit', edit_person_path(person) , class: "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger btn-xs"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_person_path ,class: "btn btn-primary btn-sm" %>
